<nav class="navbar navbar-default">
  <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="glyphicon glyphicon-user"></span>
      </button>
      <a class="navbar-brand" href="/">
        <%= image_tag("/system/images/logo_sm.png", class: "top-left-brand", alt: "Owmi Logo") %>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <% if session[:logged_in_user] %>
        <div class="logged-in-container">
          <%= current_user.name %> -
          <%= link_to "Log out", logout_path, method: :delete %>
          <%= image_tag("https://dl.dropboxusercontent.com/u/10924302/recover-me/login.png", class: "image-login", alt: "Edit Entry") %>
        </div>
      <% else %>
        <%= form_tag login_path, class: "navbar-form navbar-right" do %>
          <div class="form-group">
            <%= label :email, "Email" %>
            <%= text_field_tag "email", nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label :password, "Password" %>
            <%= password_field_tag "password", nil, class: "form-control" %>
          </div>
          <%= submit_tag "Log In", class: "btn btn-default" %>
        <% end %>
      <% end %>
    </div>
  </div>
</nav>