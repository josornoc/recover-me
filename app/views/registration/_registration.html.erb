<h1 class="registration-main-title">Register new user</h1>
<%= form_for(@user, url: register_path) do |f| %>
  <div class="form-group">
    <%= f.label :name, "User name" %>
    <%= f.text_field :name, placeholder: "Ex: Indiana Jones", class: "form-control" %>
    <% unless @user.errors[:name][0].nil? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= @user.errors[:name][0] %></strong>
    </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email, "User email" %>
    <%= f.text_field :email, placeholder: "Ex: indy@thelastcrusade.com", class: "form-control" %>
    <% unless @user.errors[:email][0].nil? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= @user.errors[:email][0] %></strong>
    </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, class: "form-control" %>
    <% unless @user.errors[:password][0].nil? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= @user.errors[:password][0] %></strong>
    </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    <% unless @user.errors[:password_confirmation][0].nil? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= @user.errors[:password_confirmation][0] %></strong>
    </div>
    <% end %>
  </div>

  <%= f.submit "Register user", class: "btn btn-default" %>
  
<% end %>
