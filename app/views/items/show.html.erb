<div class="col-md-8 col-md-offset-2">

	<p>Item Show</p>
	<h2>Name: <%= @item.name %></h2>
	<p>State: <%= @item.state %></p>
	<p>Description: <%= @item.description %></p>
	<p>Coords Lat: <%= @item.latitude %></p>
	<p>Coords Lon: <%= @item.longitude %></p>
	<p>Contact Email: <%= @item.contact_email %></p>
	<p>Reward: <%= @item.reward %></p>
	<p>Category: <%= @item.category %></p>
	<p>Created At: <%= @item.created_at %></p>
	<p>Updated At: <%= @item.updated_at %></p>

	<% if @item.is_lost? %>
		<%= form_tag item_relations_path(@item, @relation) do %>
	  <%= submit_tag "I have found this item", class: "btn btn-default" %>
		<% end %>
  <% end %>

  <% if @item.is_found? %>
		<%= form_tag item_relations_path(@item, @relation) do %>
	  <%= submit_tag "I am the owner of this item", class: "btn btn-default" %>
		<% end %>
  <% end %>

</div>