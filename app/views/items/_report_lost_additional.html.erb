<%= form_for(@item, url: item_path(@item), html: {method: "patch"}) do |f| %>

  <div class="form-group">
    <%= f.label :reward, "Reward" %>
    <%= f.text_field :reward, placeholder: "E.g. A really big hug", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category, "Category" %>
    <%= f.text_field :category, placeholder: "Please not jewelry...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Brief description of how did you lost the object:" %>
    <%= f.text_area :description, placeholder: "If any...", class: "form-control" %>
  </div>

  <%= f.submit "Save Additional Info", class: "btn btn-success btn-lg pull-right" %>
  
  <br><br>

<% end %>


